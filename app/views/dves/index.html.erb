<div class="row less-margin-bottom">
  <div class="col l6 offset-l3 m6 offset-m3 s12">
    <div class="card">
      <%= render 'app_title' %>
      <div class="card-content">
        <%= form_tag(new_dve_path, method: 'get') do %>
          <div class="input-field">
            <%= text_field :event_date, params[:event_date], placeholder: "Selecione uma data",
            class: 'date required form-control picker__input picker__input--active' %>
          </div>
          <div class="submit">
            <%= submit_tag "Cadastrar DVE",
            class: 'waves-effect waves-light btn' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row less-margin-bottom">
  <div class="col l6 offset-l3 m6 offset-m3 s12">
    <div class="card">
      <div class="card-content zero-margin-padding-bottom">
        <%= form_tag(dves_path, method: 'get') do %>
          <div class="input-field">
            <%= select_month(@beginning_of_month) %>
          </div>
          <div class="submit">
            <%= submit_tag "listar valores",
            class: 'waves-effect waves-light btn' %>
          </div>
        <% end %>
        <div class="divider"></div>
        <div class="section zero-margin-padding-bottom">
          <div class="row">
            <div class="col s12">
              <div class="he-dve-titles col s6">
                <span>DVE:</span>
              </div>
              <div class="he-dve-titles col s6">
                <span>H.E:</span>
              </div>
            </div>
            <div class="row zero-margin-padding-bottom">
              <div class="col s12">
                <div class="dve-he-values col s6">
                  <span><%= @total_count %> dias</span>
                  <hr>
                  <span>R$ <%= @total_month %> </span>
                </div>
                <div class="dve-he-values col s6">
                  <span>Soon...</span>
                  <hr>
                  <span>loading...</span>
                </div>
              </div>
            </div>
            <div class="section zero-margin-padding-bottom">
            <div class="divider"></div>
              <div class="month-details">
                <%= link_to 'Clique aqui para mais detalhes do mÃªs',  {:controller => "dves", :action => "month_detail", :month => @beginning_of_month.month } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
