<h2 class="month-name">Login</h2>
<div class="row">
  <div class="col l5 offset-l3 m6 offset-m3 s12">
    <div class="card">
      <%= render 'dves/app_title' %>
        <div class="card-content">
          <div class="row">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              
              <div class="form-inputs col l8 offset-l2 m8 offset-m2 s8  offset-s1">
                <%= f.input :email, required: false, autofocus: true, label: false, placeholder: ("Email") %>
                <%= f.input :password, required: false, label: false, placeholder: ("Senha") %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
          </div>  
              <div class="row">
                <div class="form-actions submit">
                  <%= f.button :submit, "Login" %>
                </div>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>